<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <include layout="@layout/loading_view" />

    <ImageView
        android:id="@+id/image"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:contentDescription="pokemon image"
        android:scaleType="centerCrop"
        tools:srcCompat="@tools:sample/avatars" />

    <LinearLayout
        android:id="@+id/detail_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:background="@color/colorTextBg"
        android:orientation="vertical">

        <TextView
            android:id="@+id/name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="6dp"
            android:text="Pokemon Name"
            android:textSize="20sp" />
        <!--attack-->
        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:columnCount="5"
            android:padding="8dp"
            android:useDefaultMargins="true">

            <!-- text attack-->
            <TextView
                android:id="@+id/attack"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_row="1"
                android:layout_column="1"
                android:layout_gravity="start"
                android:padding="6dp"
                android:text="Attack"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/attack_value"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_row="1"
                android:layout_column="2"
                android:layout_gravity="start"
                android:padding="6dp"
                android:text="00"
                android:textSize="16sp" />

            <!-- text special attack-->

            <TextView
                android:id="@+id/sp_attack"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_row="1"
                android:layout_column="3"
                android:layout_gravity="end"
                android:padding="6dp"
                android:text="Sp. Attack"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/sp_attack_value"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_row="1"
                android:layout_column="4"
                android:padding="6dp"
                android:text="00"
                android:textSize="16sp" />
            <!--end first row-->
            <!-- text Defense-->
            <TextView
                android:id="@+id/defense"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_row="2"
                android:layout_column="1"
                android:layout_gravity="start"
                android:padding="6dp"
                android:text="Defense"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/defense_value"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_row="2"
                android:layout_column="2"
                android:layout_gravity="start"
                android:padding="6dp"
                android:text="00"
                android:textSize="16sp" />

            <!-- text special defense-->

            <TextView
                android:id="@+id/sp_defense"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_row="2"
                android:layout_column="3"
                android:layout_gravity="end"
                android:padding="6dp"
                android:text="Sp. Defense"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/sp_defense_value"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_row="2"
                android:layout_column="4"
                android:padding="6dp"
                android:text="00"
                android:textSize="16sp" />
            <!--end second row-->

            <!-- text speed-->
            <TextView
                android:id="@+id/speed"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_row="3"
                android:layout_column="1"
                android:layout_gravity="start"
                android:padding="6dp"
                android:text="Speed"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/speed_value"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_row="3"
                android:layout_column="2"
                android:layout_gravity="start"
                android:padding="6dp"
                android:text="00"
                android:textSize="16sp" />

            <!-- text HP-->

            <TextView
                android:id="@+id/hp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_row="3"
                android:layout_column="3"
                android:layout_gravity="end"
                android:padding="6dp"
                android:text="HP"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/hp_value"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_row="3"
                android:layout_column="4"
                android:padding="6dp"
                android:text="00"
                android:textSize="16sp" />
        </GridLayout>
    </LinearLayout>
</FrameLayout>
